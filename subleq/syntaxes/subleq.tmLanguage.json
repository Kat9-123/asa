{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Subleq",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#special"
		},
		{
			"include": "#imports"
		},
		{
			"include": "#newline"
		}
	],
	"repository": {

		"keywords": {
			"patterns": [{
				"name": "keyword.control.subleq",
				"match": "((?=!)(.*?)(?=\\(| ))|\\bend\\b"
			}]
		},

		
		"strings": {
			"name": "string.quoted.double.subleq",
			"begin": "\"|'",
			"end": "\"|'",
			"patterns": [
				{
					"name": "constant.character.escape.subleq",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment.line.subleq",
			"begin": ";",
			"end": "\n",
			"patterns": [
				{
					"name": "comment.line.subleq",
					"match": "\\\\."
				}
			]
		},
		"constants": {
			"patterns": [{
				"name": "constant.numeric.subleq",
				"match": "\\b(0x[0-9A-F]+)|[0-9]+\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "entity.name.function.subleq",
				"match": "(-.*?>)|(?=@)(.*?)(?=(\\(| ))"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.subleq",
				"match": "-=|,"
			}]
		},

		"special": {
			"patterns": [{
				"name": "invalid",
				"match": "::"
			}]
		},
		"imports": {
			"name": "entity.name.class.subleq",
			"begin": "#",
			"end": "\n",
			"patterns": [
				{
					"name": "entity.name.class.subleq",
					"match": "\\\\."
				}
			]
		},
		"newline": {
			"patterns": [{
				"name": "invalid.subleq",
				"match": "\\\\"
			}]
		}

	},
	"scopeName": "source.sbl"
}