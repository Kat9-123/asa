#sublib
@LShift1 a? [
    !Add a? a?
]

@Not a? {
    !=0 result

    !RepeatLit 16 {
        !LShift1 result

        !JumpIf::LeZero a? .msb_is_1

        !Inc result

    .msb_is_1 ->

        !LShift1 a?
    }
    !Copy result a?

}


; a? &= b?
@And a? b? {
    !J .
    result -> 0
    . ->
    !RepeatLit 16 {

        !LShift1 result
        !JumpIf::LeZero a? .msb_a_is_1

        !J .continue

        .msb_a_is_1 ->
        !JumpIf::LeZero b? .msb_a_b_is_1
        !J .continue
        .msb_a_b_is_1 ->

        !Inc result

        .continue ->
            !LShift1 a?
            !LShift1 b?
    }
    !Cpy result a?
}