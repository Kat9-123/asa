**
 ; Assertions used for testing
**
#sublib
@Assert::Eq A? B? {
    !JumpIf::Eq A? B? .fin

    !IO::PrintLit "Assertion failed."
    !ASM::Breakpoint

    .fin ->
}


@Assert::EqToLit A? L_LIT? {
    !JumpIf::Eq A? LIT_LBL .fin

    
    !IO::PrintLnLit "Assertion failed."
    !IO::PrintLit "LH: "
    !ASM::Debug A?
    !IO::PrintLit "RH: "
    !ASM::Debug LIT_LBL

    !ASM::Breakpoint

    LIT_LBL -> L_LIT?
    .fin ->
}
